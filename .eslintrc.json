{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "indent": [
            2,
            8
        ],
        "comma-dangle": [
            2,
            "never"
        ],
        "no-var": 0,
        "one-var": 0,
        "space-before-function-paren": 0,
        "no-use-before-define": 0
    }
}
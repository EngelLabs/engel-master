{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            2,
            8
        ],
        "semi": [
            2,
            "always"
        ],
        "space-before-function-paren": 0
    },
    "globals": {
        "NodeJS": true
    }
}
